 doi = {10.1515/sagmb-2015-0057},
 issn = {1544-6115},
 journaltitle = {Statistical Applications in Genetics and Molecular Biology},
 keywords = {1 - Biology:Molecular Dynamics:Protein Bonding:Maltose-Binding Protein, 2 - Dynamical Distance, 2 - Elastic Network Model, 2 - Persistence Landscape, 2 - Persistent Homology:Vietoris-Rips Filtration, 2 - Topological Landscape, 3 - Protein Data Bank:Point Cloud},
 number = {1},
